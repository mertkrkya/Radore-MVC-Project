@model HostingDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-center">Yeni Account Ekle</h3>
<a class="btn btn-outline-info btn-sm  float-end my-2" asp-action="Index" asp-controller="Account"><i class="bi bi-arrow-left"></i>Listeye geri dön</a>
<br />
<br />
<br />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="border rounded p-3" asp-action="CreateAccount" asp-controller="Account" method="post">
    <div class="form-group mt-1">
        <label>
            Hosting Package<span class="text-danger">*</span>
        </label>
        <input asp-for="@Model.HostingPackage" class="form-control" />
        <span asp-validation-for="@Model.HostingPackage" class="text-danger"></span>
    </div>

    <div class="form-group mt-1">
        <label>
            Hosting Domain Name<span class="text-danger">*</span>
        </label>
        <input asp-for="@Model.HostingDomainName" class="form-control" />
        <span asp-validation-for="@Model.HostingDomainName" class="text-danger"></span>
    </div>
    <div class="form-group mt-2 text-end">
        <button type="submit" class="btn btn-primary mx-auto">Oluştur</button>
    </div>
</form> 